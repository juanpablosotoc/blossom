{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "jsx": "react-jsx",                       
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@myComponents/*": ["src/renderer/components/*"],
      "@myTypes/*": ["src/types/*"],
      "@myAssets/*": ["src/renderer/assets/*"],
      "@myUtils/*": ["src/renderer/utils/*"],
      "@myFrames/*": ["src/renderer/frames/*"],
      "@myPages/*": ["src/renderer/pages/*"],
    }
  },
  "include": ["src/**/*"]
}
